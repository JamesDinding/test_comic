{
  "private": true,
  "name": "nsmh-web-preact",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --no-json --no-esm --preload --no-inline-css --no-sw --brotli --no-prerender",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --no-sw",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "css": "tailwindcss --input src/resources/css/src.css --output src/assets/css/nsmh.css --watch"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "html5-history-api": "^4.2.10",
    "preact": "^10.3.1",
    "preact-cli-svg-loader": "^1.1.0",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "tailwindcss-safe-area": "^0.2.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "intersection-observer-debugger": "^0.1.1",
    "preact-cli": "^3.0.0",
    "sirv-cli": "^1.0.0-next.3",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.0"
  },
  "browserslist": [
    "Chrome > 75"
  ]
}
